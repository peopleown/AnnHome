<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="5dp"
    android:orientation="vertical"
    style="@style/ChannelItem"
    android:background="@drawable/round_corner_item_single_bg"
    card_view:cardCornerRadius="5dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:id="@+id/imageView"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:text="..."
        android:textAlignment="center"
        android:textSize="30dp"
        android:layout_alignBaseline="@+id/textView"
        android:layout_alignBottom="@+id/textView"
        android:layout_alignEnd="@+id/joke_content" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:text="开心一刻"
        android:id="@+id/textView" />

        <TextView
            android:id="@+id/joke_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="这是一个笑话,一个特么特别好笑的笑话."
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/textView" />
    </RelativeLayout>

        <View
            android:layout_width="fill_parent"
            android:layout_height="1px"
            android:layout_marginTop="5dp"
            android:background="@color/line_gray"
            android:layout_alignBottom="@+id/joke_content"
            android:layout_alignStart="@+id/joke_content"
            android:id="@+id/view" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="内容来源:互联网"
                android:layout_marginLeft="10dp"
                android:id="@+id/textView3" />
            <TextView
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:text="换一个"
                android:layout_marginStart="190dp"
                android:textColor="@color/blue"
                android:id="@+id/joke_next" />
        </LinearLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>